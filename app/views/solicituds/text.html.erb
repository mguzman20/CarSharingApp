<div class="container-fluid">
  <div class="row">
    <div class="col-3 rooms-sidebar">
      <div class="card no-outline">
        <div class="card-body">
          <small>Logged in as</small><br>
          <b><%= current_user.username %><br></b>
        </div>
      </div>
      <% @solicituds.each do |room| %>
        <%= link_to room, class: 'room-link' do %>
          <% active_class = (@room == room) ? 'active' : '' %>
          <div class="card no-outline mb-2 room-card <%= active_class %>">
            <div class="card-body">
              <span class='name'>
                <% if solicitud.estado == 'aceptada' %>
                    <% if solicitud.user == current_user %>
                        <p><%= link_to solicitud.publication.user.username, solicitud, :class => "button is-info" %></p>
                        <br>
                    <% end %>
                    <% if solicitud.publication.user == current_user %>
                        <p><%= link_to solicitud.user.username, solicitud, :class => "button is-info" %></p>
                        <br>
                    <% end %>
                <% end %>
              </span><br>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light">
            <span class="navbar-brand" href="#">
              <b><%= @room.name %></b>
            </span>
            <small><%= @room.users.uniq.count %> Members</small>
          </nav>
          <div id="messages">
            <% @room.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>